<!DOCTYPE html>
<html>
<head>
  <title>RubyBelt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:errors] %>
		<div id="alert">
			<% flash[:errors].each do |error| %>
				<p> <%= error %> </p>
			<% end %>
		</div>
	<% end %>

	<% if current_user %>
		<div id="logout">	
			<a href="<%= session_path(session[:id]) %>" data-method="delete"> Log Out </a>
		</div>
	<% end %>

<%= yield %>

</body>
</html>
